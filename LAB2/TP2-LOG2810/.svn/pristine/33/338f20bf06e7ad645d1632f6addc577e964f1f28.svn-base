#ifndef UTILISATEUR_H
#define UTILISATEUR_H


#include <iostream>

using namespace std;

class Utilisateur
{
public:
	// Constructeur par defaut
	Utilisateur();

	// Destructeur
	~Utilisateur();

	// Setters
	void setOrigine(const string& origine);
	void setDestination(const string& destination);
	void setNumGroupe(const string& numGroupe);

	// Getters
	string getOrigine() const;
	string getDestination() const;
	string getNumGroupe() const;

private:
	string origine_;
	string destination_;
	string numGroupe_;
};

#endif // !UTILISATEUR_H
